
<% include ../partials/header %>

<div class="container">
	<div class="row">
		<h1 style="text-align: center"> Edit <%= activityzone.name %> </h1>
		<div style="width:30%; margin:25px auto;">
			<form action="/activityzones/<%= activityzone._id%>?_method=PUT" method= "POST">
				<div class="form-group">
					<input class="form-control" type="text" name= "activityzone[name]" value=" <%= activityzone.name %>">
				</div>
				<div class="form-group">
					<input class="form-control" type="number" name= "activityzone[fear]" value="<%= activityzone.fear %>" min="10" max="100" step="1">
				</div>
				
				<div class="form-group">
				<label for="location">Location</label>
				<input class="form-control" type="text" name= "location" id="location" value=" <%=activityzone.location %>">	
		  </div>
				<div class="form-group">
					<input class="form-control" type="text" name= "activityzone[image]" value="<%= activityzone.image %>">	
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name= "activityzone[description]" value=" <%= activityzone.description %>">	
				</div>
				<div class="form-group">
					<h3 class= "aditional"> Aditional images </h3>	
					<input class="form-control" type="text" name= "activityzone[image2]" value=" <%= activityzone.image2 %>">	
					<input class="form-control" type="text" name= "activityzone[image3]" value=" <%= activityzone.image3 %>">	
					<input class="form-control" type="text" name= "activityzone[image4]" value=" <%= activityzone.image4 %>">	
					<input class="form-control" type="text" name= "activityzone[image5]" value=" <%= activityzone.image5 %>">	
				</div>
			
				<div class="form-group">
					<button class="btn btn-lg btn-danger btn-block">Submit!!</button>	
				</div>	
			</form>	
			<a style= "font-weight:bold;" class="lead" href="/activityzones/<%= activityzone._id%>">Go Back</a>
		</div>
		
	</div>
</div>
<% include ../partials/footer %>