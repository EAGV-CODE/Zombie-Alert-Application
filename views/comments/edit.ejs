<% include ../partials/header %>

<div class="container">
	<div class="row">
		<h1 style="text-align: center"> Edit Comment of <%= activityzone.name %> </h1>
		<div style="width:30%; margin:25px auto;">
			<form action="/activityzones/<%= activityzone._id %>/comments/<%= comment._id %>?_method=PUT" method= "POST">
				<div class="form-group">
					<input class="form-control" type="text" name= "comment[text]" value="<%= comment.text %>">
			
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-danger btn-block">Submit!!</button>	
				</div>	
			</form>	
			<a style= "font-weight:bold;" class="lead" href="/activityzones/<%= activityzone._id %>">Go Back</a>
		</div>
	</div>
</div>
<% include ../partials/footer %>